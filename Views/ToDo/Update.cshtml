@using ToDoer.Models

@model ToDo

@{
    ViewData["Title"] = "Update Item";
}

<div class="border p-3">
    <div class="form-group row col-12">
        <h2 class="text-black-50 pl-2 col-12">
            <i class="fa-solid fa-screwdriver-wrench"></i>
            Update Item
        </h2>
    </div>
    <form method="post" asp-action="Update">
        <input asp-for="Id" hidden>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row p-3">

            <div class="row align-items-center col-12 p-2">

                <div class="btn-group p-2" role="group" aria-label="Basic checkbox toggle button group">
                    <input type="checkbox" class="btn-check" asp-for="Complete" id="btncheck1">
                    <label class="btn btn-outline-success" for="btncheck1" asp-for="Complete">Complete</label>
                </div>

                <div class="input-group p-2">
                    <span class="input-group-text" id="basic-addon1">Task Name</span>
                    <input type="text" asp-for="TodoName" class="form-control" aria-label="Username"
                        aria-describedby="basic-addon1">
                    <span asp-validation-for="TodoName" class="text-danger"></span>
                </div>

                <div class="input-group p-3">
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                    <span class="input-group-text" id="basic-addon1">Deadline</span>
                    <input type="date" asp-for="Deadline" class="form-control" aria-label="Deadline"
                        aria-describedby="basic-addon1">
                </div>

                <div class="input-group p-3">
                    <span asp-validation-for="Tags" class="text-danger"></span>
                    <span class="input-group-text" id="basic-addon1">Tags (separated by coma)</span>
                    <input type="text" asp-for="Tags" class="form-control" aria-label="Tags (separated by coma)"
                        aria-describedby="basic-addon1">
                </div>

                <div class="form-group col-12">

                    <div class="col-2 col-md-4 col-sm-12 col-12">
                        <br>
                        <input type="submit" class="btn btn-success w-75" value="Update" />
                    </div>
                    <div class="col-2 col-md-4 col-sm-12 col-12">
                        <br>
                        <a asp-action="List" class="btn btn-secondary w-75">Back</a>
                    </div>

                </div>
            </div>
        </div>
    </form>
    <form method="post" asp-action="Archive">
        <input asp-for="Id" hidden>
        <input type="text" asp-for="TodoName" hidden>
        <input type="checkbox" asp-for="Complete" hidden>
        <input type="date" asp-for="CreationDate" hidden>
        <input type="date" asp-for="Deadline" hidden>
        <div class="col-2 col-md-4 col-sm-12 col-12 p-3">
            <br>
            <input type="submit" class="btn btn-primary w-50" value="Archive Task" />
        </div>
    </form>
</div>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />}
}