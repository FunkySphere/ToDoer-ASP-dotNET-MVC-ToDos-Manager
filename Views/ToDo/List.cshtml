@{
    ViewData["Title"] = "ToDoer - Task List";
}

@using ToDoer.Models

@model List<ToDo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ToDo List</h2>
        </div>
        <div class="text-end col-6">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">
                Create New Items
            </a>
        </div>
    </div>
    <br>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Task Name
                    </th>
                    <th>
                        Completed
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="15%">@expense.Id</td>
                        <td width="20%">@expense.TodoName</td>
                        <td width="20%">@expense.Complete</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ToDo" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary mx-1">
                                    Update
                                </a>
                                <a asp-controller="ToDo" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger mx-1">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>
            No items created yet
        </h3>
    }

</div>