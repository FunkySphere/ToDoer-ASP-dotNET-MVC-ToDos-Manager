@{
    ViewData["Title"] = "ToDoer - Task List";
}

@using ToDoer.Models

@model List<ToDo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ToDo List</h2>
        </div>
        <div class="text-end col-6">
            <a asp-controller="ToDo" asp-action="Create" class="btn btn-primary">
                Create New Items
            </a>
        </div>
    </div>
    <br>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-hover" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Task Name
                    </th>
                    <th>
                        Completed
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td width="20%">@task.TodoName</td>
                        <td width="20%">@task.Complete</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ToDo" asp-action="Finish" asp-route-Id="@task.Id" class="btn btn-outline-success mx-1 btn-sm">
                                    Finish
                                </a>
                                @* directs to a page that autimatically checks the completed checkbox and redirects back *@
                                <a asp-controller="ToDo" asp-action="Update" asp-route-Id="@task.Id" class="btn btn-outline-secondary mx-1 btn-sm">
                                    Update
                                </a>
                                <a asp-controller="ToDo" asp-action="Delete" asp-route-Id="@task.Id" class="btn btn-outline-danger mx-1 btn-sm">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>
            No items created yet
        </h3>
    }

</div>