@using ToDoer.Models

@model ToDo

@{
    ViewData["Title"] = "Create Item";
}

<form method="post" asp-action="Create">
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">
                <i class="fa-solid fa-plus"></i>
                Add Item
            </h2>
        </div>
        <div class="row p-3">
            <div class="col-12 p-3">

                <div class="input-group p-3">
                    <span asp-validation-for="TodoName" class="text-danger"></span>
                    <span class="input-group-text" id="basic-addon1">Task Name</span>
                    <input type="text" asp-for="TodoName" class="form-control" aria-label="Username"
                        aria-describedby="basic-addon1">
                </div>

                <div class="input-group p-3">
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                    <span class="input-group-text" id="basic-addon1">Deadline</span>
                    <input type="date" asp-for="Deadline" class="form-control" aria-label="Deadline"
                        aria-describedby="basic-addon1">
                </div>

                <div class="input-group p-3">
                    <span asp-validation-for="Tags" class="text-danger"></span>
                    <span class="input-group-text" id="basic-addon1">Tags (separated by coma)</span>
                    <input type="text" asp-for="Tags" class="form-control" aria-label="Tags (separated by coma)"
                        aria-describedby="basic-addon1">
                </div>

                <div class="form-group col-12">

                    <div class="col-2 col-md-4 col-sm-12 col-12">
                        <br>
                        <input type="submit" class="btn btn-success w-75" value="Create" />
                    </div>
                    <div class="col-2 col-md-4 col-sm-12 col-12">
                        <br>
                        <a asp-action="List" class="btn btn-secondary w-75">Back</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />}
}