@using ToDoer.Models

@model ToDo

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">
                Delete Item
            </h2>
        </div>
        <div class="row p-3">
            <div class="col-12 p-3">
                <div class="form-group row border col-4">
                    <div class="p-2">
                        <label asp-for="TodoName"></label>
                    </div>
                    <br>
                    <div class="p-2">
                        <input asp-for="TodoName" class="form-control" disabled>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <br>
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <br>
                            <a asp-action="List" class="btn btn-secondary w-75">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />}
}